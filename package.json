{
  "name": "what-the-flag",
  "version": "0.1.0",
  "description": "A Quizduell-like game with questions about countries, capitals and flags.",
  "private": true,
  "main": "server.js",
  "scripts": {
    "server": "nodemon -r dotenv/config server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm i --prefix client && npm run build --prefix client"
  },
  "keywords": [
    "quiz",
    "game",
    "countries"
  ],
  "author": "Nico Gr√§f",
  "license": "MIT",
  "engines": {
    "node": "10.16.1"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "bcrypt": "^3.0.6",
    "compression": "^1.7.4",
    "country-quiz": "^0.4.0",
    "express": "^4.17.1",
    "express-validator": "^6.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.10"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "dotenv": "^8.1.0",
    "nodemon": "^1.19.1"
  }
}
